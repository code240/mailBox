<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Node Home</title>

</head>

<body>
    <div class="main-div">
        <h1>
            Login Here
        </h1>
        <form action="/check" name="login_form" method="POST" onsubmit="return validationLogin();">
        <input type="text" name="user_name" autocomplete="off" id="username" class="input-form us-input" placeholder="Username@vip.in">
        <input type="password" name="user_ps" autocomplete="off" id="ps" class="input-form ps-input" placeholder="Password">
        <input type="submit" value="Login" class="btn btn-danger btn-login">
        </form>
        <a href="/register" style="text-decoration: none;"><button class="btn btn-success btn-register">Register new user</button></a>
    </div>
    {{#if message}}
        <div class="alert alert-success alert-div-success" role="alert">
            <b>Success : </b> {{this.message}}
        </div>
    {{/if}}
    
    {{#if LoginError}}
        <div class="alert alert-danger alert-div-success"  role="alert">
            <b>Success : </b> {{this.LoginError}}
        </div>
    {{/if}}


<div class="alert alert-danger alert-div" role="alert" id="alert-div">
  <b>Error :</b> Incorrect password! Please try again.
</div>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script>
        function validationLogin(){
            let id = document.forms["login_form"]["user_name"].value;
            let ps = document.forms["login_form"]["user_ps"].value;
            if(id.trim()===""){
                document.getElementById("alert-div").style.display = "block";
                document.getElementById("alert-div").innerHTML = "<b>Note : </b>Please enter the username.";
                setTimeout(()=>{
                    document.getElementById("alert-div").style.display = "none";
                },5000);
                return false; 
            }
            if(ps.trim()===""){
                document.getElementById("alert-div").style.display = "block";
                document.getElementById("alert-div").innerHTML = "<b>Note : </b>Please enter the password.";
                setTimeout(()=>{
                    document.getElementById("alert-div").style.display = "none";
                },5000);
                return false; 
            }
            return true;
        }   
    </script>
</body>

</html>